<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.aldemir.paddlefish" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.DashboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AppSettingsActivity"
            android:label="@string/title_activity_app_settings" >
        </activity>
        <activity
            android:name=".ui.DeviceSettingsActivity"
            android:label="@string/title_activity_device_settings" >
        </activity>
        <activity
            android:name=".ui.DeleteDeviceActivity"
            android:label="@string/title_activity_delete_device" >
        </activity>
        <activity
            android:name=".ui.AddDeviceActivity"
            android:label="@string/title_activity_add_device" >
        </activity>
        <activity
            android:name=".ui.MonitorActivity"
            android:label="@string/title_activity_monitor" >
        </activity>
    </application>

</manifest>
